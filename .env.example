# App/session
NODE_ENV=development
SESSION_SECRET=replace-with-a-long-random-secret

# Public app URLs
# Local defaults:
# - CLIENT_URL: Vite app
# - SERVER_URL: Express API
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:3001

# Optional overrides for production/custom domains
APP_URL=
ALLOWED_ORIGIN=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Optional: leave blank to auto-build from SERVER_URL
GOOGLE_CALLBACK_URL=
# Optional: Google email to auto-promote to admin
ADMIN_EMAIL=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# Recommended: create a recurring monthly Price in Stripe and set its ID here
STRIPE_PRO_PRICE_ID=
